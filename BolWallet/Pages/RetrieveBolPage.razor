@page "/retrieve-bol-page"


@inject Breadcrumbs breadcrumbs
@inject NavigationManager nav;
@inject UserViewModel userViewModel
@inject RetrieveBolViewModel retrieveBolViewModel

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-2">
            <MudText Color="@Color.Default">@retrieveBolViewModel.RetrieveBolLabel</MudText>
            <br />
           
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary"
                       OnClick="@(async z=> retrieveBolViewModel.OnClickCopyCodename())">@retrieveBolViewModel.CodenameText</MudButton>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary"
                       OnClick="@(async z=> retrieveBolViewModel.OnClickCopyAddress())">@retrieveBolViewModel.CommAddressText</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
@code {
    protected override async Task OnInitializedAsync()
    {
        
        breadcrumbs._items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/index-with-account", disabled: false),
            new BreadcrumbItem("Retrive BOL", href: null, disabled: true),
        };

        breadcrumbs.userData = userViewModel._userData;
        breadcrumbs.Update();

    }
}