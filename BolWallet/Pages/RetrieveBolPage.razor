@page "/retrieve-bol-page"
@inherits MvvmComponentBase<RetrieveBolViewModel>

@inject Breadcrumbs breadcrumbs
@inject NavigationManager nav;
@inject UserViewModel userViewModel

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-2">
            <MudText Color="@Color.Default">@retrieveBolViewModel.RetrieveBolLabel</MudText>
            <br />
           
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary"
                       OnClick="OnClickCopyCodename">@retrieveBolViewModel.CodenameText</MudButton>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary"
                       OnClick="OnClickCopyAddress">@retrieveBolViewModel.CommAddressText</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>
@code {
    RetrieveBolViewModel retrieveBolViewModel;
    protected override async Task OnInitializedAsync()
    {
        retrieveBolViewModel = ViewModel;
        breadcrumbs._items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/index-with-account", disabled: false),
            new BreadcrumbItem("Retrive BOL", href: null, disabled: true),
        };

        breadcrumbs.userData = userViewModel.userData;
        breadcrumbs.Update();

    }

    private void OnClickCopyCodename(MouseEventArgs args)
    {
        Clipboard.Default.SetTextAsync("Codename");

        //Toast.Make("Codename copied to Clipboard").Show();
    }

    private void OnClickCopyAddress(MouseEventArgs args)
    {
        Clipboard.Default.SetTextAsync("Address");

        //Toast.Make("Address copied to Clipboard").Show();
    }
}