@page "/financial-transactions-page"
@inherits MvvmComponentBase<FinancialTransactionsViewModel>
@inject Breadcrumbs breadcrumbs
@inject NavigationManager nav;
@inject UserViewModel userViewModel


<MudGrid>
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-2">
            @*<MudText Color="@Color.Default">Total Balance: @financialTransactionsViewModel.BolAccount.TotalBalance</MudText>*@
            <br/>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary" OnClick="@(async z=> nav.NavigateTo("/send-bol-page"))">Transfer</MudButton>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary" OnClick="@(async z=> nav.NavigateTo("/move-claim-page"))">Transfer Claim</MudButton>
            <MudButton Variant="MudBlazor.Variant.Filled" Color="Color.Primary" OnClick="@(async z=> nav.NavigateTo("/claim-page"))">Claim</MudButton>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {
    FinancialTransactionsViewModel financialTransactionsViewModel;
    protected override async Task OnInitializedAsync()
    {
        financialTransactionsViewModel = ViewModel;
                
        breadcrumbs._items = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/index-with-account", disabled: false),
            new BreadcrumbItem("Financial Transactions", href: null, disabled: true),
        };

        breadcrumbs.userData = userViewModel.userData;
        breadcrumbs.Update();

    }
}