		<PackageReference Include="SkiaSharp.Extended.Iconify.FontAwesome" Version="5.0.0" />
		<PackageReference Include="SkiaSharp.Views.Maui.Controls" Version="2.88.5" />
		<PackageReference Include="SkiaSharp.Views.Maui.Core" Version="2.88.5" />
	</ItemGroup>

	<ItemGroup>
		<None Update="Platforms\iOS\Entitlements.plist">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<None Remove="appsettings.json" />
		<EmbeddedResource Include="appsettings.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
		<None Remove="appsettings.Development.json" />
		<EmbeddedResource Include="appsettings.Development.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
			<DependentUpon>appsettings.json</DependentUpon>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<MauiFont Include="Helpers\Icons.cs" />
	</ItemGroup>

	<ItemGroup>
	  <MauiIcon Include="Resources\AppIcon\appicon.svg" />
	</ItemGroup>

</Project>
