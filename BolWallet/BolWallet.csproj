    <ItemGroup>
      <MauiXaml Remove="Views\AccountPage.xaml" />
      <MauiXaml Remove="Views\BolCommunityPage.xaml" />
      <MauiXaml Remove="Views\CertifierPage.xaml" />
      <MauiXaml Remove="Views\CertifyPage.xaml" />
      <MauiXaml Remove="Views\CreateCodenamePage.xaml" />
      <MauiXaml Remove="Views\CreateEdiPage.xaml" />
      <MauiXaml Remove="Views\FinancialTransactionsPage.xaml" />
      <MauiXaml Remove="Views\GenerateWalletWithPasswordPage.xaml" />
      <MauiXaml Remove="Views\MainPage.xaml" />
